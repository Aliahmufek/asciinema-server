<% cache ['thumbnail', preview] do %>
  <div class="presentation">
    <%= link_to preview, :class => 'preview-link' do %>
      <div class="play-button"><div class="arrow">â–º</div></div>
      <pre class="preview"><%= preview.thumbnail(28, 9) %></pre>
    <% end -%>

    <div class="info">
      <h3>
        <%= link_to preview.title, preview %>
      </h3>

      <p class="date">
        <%= time_ago_tag preview.created_at %> by <%= preview.author_profile_link %>
      </p>
    </div>
  </div>
<% end -%>
